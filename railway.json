{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "services": {
      "api": {
        "command": "python api_server.py",
        "port": 8000
      },
      "bot": {
        "command": "python telegram_bot.py"
      }
    }
  }
}
